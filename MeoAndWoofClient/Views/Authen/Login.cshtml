@model BusinessObject.Models.User;

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>RegistrationForm_v1 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet"
          href="/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css" />
    <link href="/img/logo.png" rel="icon" />

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />

    <!-- Flaticon Font -->
    <link href="/lib/flaticon/font/flaticon.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
          rel="stylesheet" />

    <!-- STYLE CSS -->
    <link href="/css/common/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/common/login-style.css" />
    <link href="/css/pages/navbar.css" />
</head>

<body>
   @Html.Partial("Header")
    <div class="wrapper"
         style="background-image: url('/img/login-wallpaper.jpg')">
        <div class="inner">
            <div class="image-holder">
                <img width="100%" height="100%" src="/img/feature.jpg" alt="" />
            </div>
            <form asp-action="Login">
                <h3>Mẫu đăng nhập</h3>
                <div class="form-wrapper">
                    <input asp-for="Username" type="text" placeholder="Tài khoản" class="form-control" />
                    <i class="zmdi zmdi-account"></i>
                </div>

                <div class="form-wrapper">
                    <input asp-for="Password" type="password" placeholder="Mật khẩu" class="form-control" />
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button>
                    Đăng nhập
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
                <p class="text-center mt-3">hoặc có thể đăng nhập với</p>
                <a asp-action="Login" asp-controller="Login">
                    <button type="button" class="btn btn-danger w-100 mt-3">
                        <svg xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="currentColor"
                                class="bi bi-google"
                                viewBox="0 0 16 16">
                            <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z"></path>
                        </svg>
                        Google
                    </button>
                </a>
                <a asp-action="Facebook" asp-controller="Login">
                    <button style="background-color: #0b5ed7; color: white"
                            type="button"
                            class="btn w-100 mt-2">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16"
                             height="16"
                             fill="currentColor"
                             class="bi bi-facebook"
                             viewBox="0 0 16 16">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951"></path>
                        </svg>
                        Facebook
                    </button>
                </a>
                <div class="mt-3 text-center">
                    <a asp-action="ForgotPassword" asp-controller="Authen">Quên mật khẩu?</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
