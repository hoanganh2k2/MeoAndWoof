@model BusinessObject.Models.User;
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>RegistrationForm_v1 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet"
          href="/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css" />
    <link href="/img/logo.png" rel="icon" />

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />

    <!-- Flaticon Font -->
    <link href="/lib/flaticon/font/flaticon.css" rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
          rel="stylesheet" />

    <!-- STYLE CSS -->
    <link href="/css/common/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/common/login-style.css" />
    <link href="/css/pages/navbar.css" />
</head>

<body>
    @Html.Partial("Header")
    <div class="wrapper"
         style="background-image: url('/img/login-wallpaper.jpg')">
        <div class="inner">
            <div class="image-holder">
                <img width="100%" height="100%" src="/img/feature.jpg" alt="" />
            </div>
            <form asp-action="Register">
                <h3>Mẫu đăng ký</h3>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Fullname" type="text" placeholder="Tên đầy đủ" class="form-control" />
                        <i class="zmdi zmdi-account"></i>
                    </div>
                    <div>
                    <span asp-validation-for="Fullname" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Username" type="text" placeholder="Tài khoản" class="form-control" />
                        <i class="zmdi zmdi-account"></i>
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Email" type="text" placeholder="Email" class="form-control" />
                        <i class="zmdi zmdi-email"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-wrapper">
                    <select asp-for="Gender" class="form-control">
                        <option value="" disabled selected>Giới tính</option>
                        <option value="1">Nam</option>
                        <option value="2">Nữ</option>
                        <option value="3">Khác</option>
                    </select>
                    <i class="zmdi zmdi-caret-down" style="font-size: 17px"></i>
                </div>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Address" type="text" placeholder="Địa chỉ" class="form-control" />
                        <i class="zmdi zmdi-pin"></i>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Sdt" type="text" placeholder="Số điện thoại" class="form-control" />
                        <i class="zmdi zmdi-phone"></i>
                    </div>
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-wrapper" style="flex-direction: column;">
                    <div style="position: relative;">
                        <input asp-for="Password" type="password" placeholder="Mật khẩu" class="form-control" />
                        <i class="zmdi zmdi-lock"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div class="form-wrapper">
                    <input name="RePassword" type="password" placeholder="Nhập lại mật khẩu" class="form-control" />
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <!-- Dropdown for User and Supplier -->
                <div class="form-wrapper">
                    <select asp-for="Roleid" class="form-control">
                        <option value="" disabled selected>Chọn loại tài khoản</option>
                        <option value="3">Người dùng</option>
                        <option value="2">Nhà cung cấp dịch vụ</option>
                    </select>
                    <i class="zmdi zmdi-caret-down" style="font-size: 17px"></i>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button> Đăng ký <i class="zmdi zmdi-arrow-right"></i> </button>
            </form>
        </div>
    </div>
</body>
</html>
