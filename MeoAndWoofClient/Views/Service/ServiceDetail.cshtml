<body>
    @Html.Partial("Header")

    <!-- Services Start -->
    <div class="container-fluid bg-light pt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-7">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p>
                                <span style="color: red">Scroll down</span> to browse @ViewBag.ServiceCount Pet
                                Sitters near you in Vietnam
                            </p>
                            <div>⭐⭐⭐⭐⭐ @ViewBag.AllReview reviews</div>
                        </div>
                        <div class="form-group">
                            <select class="custom-select my-1 mr-sm-2">
                                <option selected>Sort By</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                    <div class="list-service-shops">
                        <div class="list-service-shops">
                            @foreach(var service in Model)
                            {
                                <!-- List Service's Shops START -->
                                string actionName;
                                if (service.Servicetypeid == 1) actionName = "ShopDetail1";
                                else actionName = "ShopDetail2";
                                <a asp-controller="Service" asp-action="@actionName" asp-route-id="@service.Serviceid" style="display: block; text-decoration: none;color: inherit;">
                                    <div class="card mt-4" style="width: 100%">
                                        <div class="row no-gutters">
                                            <div class="col-sm-5"> <img class="card-img h-100 w-100"
                                                     src="@service.Serviceimage"
                                                     alt="Suresh Dasari Card" />
                                            </div>
                                            <div class="col-sm-7">
                                                <div class="card-body">
                                                    <h5 style="color: #65518d" class="card-title">
                                                        @service.Servicename
                                                    </h5>
                                                    <p style="max-height: 70px; overflow: hidden; text-overflow: ellipsis;" class="card-text">
                                                        @service.Description
                                                    </p>
                                                    <small>@service.Address</small>
                                                    <br />
                                                    <br />
                                                    <div>@service.Servicestar⭐ @service.ServiceNumberReview reviews</div>
                                                    <br />
                                                    <div style="font-weight: bold; color: #008000">
                                                        <i class="fa-regular fa-calendar"></i>
                                                        &nbsp;&nbsp;@service.ServiceNumberBooking Completed Bookings
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                            <!-- List Service's Shops END - EDIT HERE -->
                            <!-- PAGINATION START -->
                            <div class="demo mt-5">
                                <nav class="pagination-outer" aria-label="Page navigation">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a href="#" class="page-link" aria-label="Previous">
                                                <span aria-hidden="true">«</span>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">1</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">2</a>
                                        </li>
                                        <li class="page-item active">
